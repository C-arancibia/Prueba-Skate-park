{{!-- Datos del perfil --}}
{{> header}}
<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50">
  <form action="/profile/update" method="POST">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input type="email" name="email" class="form-control m-auto" value="{{email}}" disabled>
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input type="text" name="nombre" class="form-control m-auto" value="{{nombre}}">
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input type="password" name="password" class="form-control m-auto" value="{{password}}">
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input type="password" name="confirm_password" class="form-control m-auto" value="{{password}}">
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input type="number" name="anos_experiencia" class="form-control m-auto" value="{{anos_experiencia}}">
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input type="text" name="especialidad" class="form-control m-auto" value="{{especialidad}}">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
  </form>
  <form action="/profile/delete" method="POST">
    <button type="submit" class="btn btn-danger">Eliminar cuenta</button>
  </form>
</div>
{{> footer}}
